# WhatsApp Bot Configuration

# Server Configuration
PORT=3000
APP_URL=http://localhost:3000

# WhatsApp Session
WHATSAPP_SESSION_ID=default_session

# Supabase Configuration (Required)
SUPABASE_URL=your_supabase_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Google Sheets Integration (Required for workflows)
# Get credentials from Google Cloud Console
# Format: JSON string of service account credentials
GOOGLE_SHEETS_CREDENTIALS={"type":"service_account","project_id":"..."}

# Google Sheets IDs
INTEREST_RATE_SPREADSHEET_ID=your_interest_rate_spreadsheet_id
VALUATION_SPREADSHEET_ID=your_valuation_spreadsheet_id

# Legacy n8n Webhooks (Optional - for gradual migration)
# Leave empty to use native workflows only
N8N_WEBHOOK_URL=
INTEREST_RATE_WEBHOOK_URL=
VALUATION_WEBHOOK_URL=
UPDATE_RATE_WEBHOOK_URL=
