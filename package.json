{
  "name": "whatsapp-bot-render",
  "version": "1.0.0",
  "description": "A 24/7 WhatsApp bot using whatsapp-web.js",
  "main": "index.js",
  "scripts": {
    "start": "node --expose-gc --max-old-space-size=256 index.js",
    "dev": "node --expose-gc index.js",
    "check-updates": "npm outdated",
    "check-whatsapp": "npm view whatsapp-web.js version && npm list whatsapp-web.js --depth=0",
    "audit": "npm audit --production",
    "audit-fix": "npm audit fix",
    "update-safe": "node -e \"console.log('Run: .\\\\scripts\\\\safe-update-whatsapp.ps1 (Windows) or bash scripts/safe-update-whatsapp.sh (Linux/Mac)')\"",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.81.1",
    "axios": "^1.13.2",
    "express": "^5.2.1",
    "imagekit": "^6.0.0",
    "multer": "^2.0.2",
    "p-queue": "^7.4.1",
    "puppeteer": "^24.30.0",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "qrcode": "^1.5.4",
    "whatsapp-web.js": "github:pedroslopez/whatsapp-web.js#main",
    "ws": "^8.18.3"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "overrides": {
    "whatsapp-web.js": {
      "puppeteer": "$puppeteer",
      "puppeteer-core": "24.30.0",
      "ws": "8.18.3",
      "tar-fs": "3.0.6"
    }
  }
}
